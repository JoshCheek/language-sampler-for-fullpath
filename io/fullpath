#!/usr/bin/env io

dir          := Directory currentWorkingDirectory .. "/"
paths        := list()
printHelp    := false
copyOutput   := false

List withoutBlanks := method(select(value, value != ""))

// System args rest map(index, arg, dir .. arg) foreach(index, path, path println())
System args rest foreach(index, arg,
  (arg == "-h" or arg == "--help") ifTrue(
    printHelp = true
  ) ifFalse(
    (arg == "-c" or arg == "--copy") ifTrue(
      copyOutput = true
    ) ifFalse (
      paths append(arg)
    )
  )
)

paths = paths withoutBlanks
(paths size == 0) ifTrue(paths = File standardInput readLines withoutBlanks)

paths = paths map(index, arg, dir .. arg)

(paths size == 1) ifTrue(
  paths first print
) ifFalse (
  paths foreach(index, path, path println)
)
